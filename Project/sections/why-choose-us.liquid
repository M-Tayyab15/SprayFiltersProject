<section class="why-choose-us-section">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <p class="section-subtitle">{{ section.settings.subtitle }}</p>
    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-card">
          <div class="icon-container" style="background-image: url('https://cdn.shopify.com/s/files/1/0735/7661/2082/files/Ellipse_11.png?v=1736853145');">
            <!-- <div class="icon-background" style="background-image: url('https://cdn.shopify.com/s/files/1/0735/7661/2082/files/Ellipse_11.png?v=1736853145');"></div> -->
            <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.title }}">
          </div>
          <h3 class="feature-heading">{{ block.settings.heading }}</h3>
          <p class="feature-description">{{ block.settings.description }}</p>
          <div class="underline"> </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.why-choose-us-section {
  background-color: #ffffff;
  text-align: center;
  padding: 120px 72px;
}
.why-choose-us-section .section-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 10px;
}
.why-choose-us-section .section-subtitle {
  font-size: 14px;
  color: rgba(108, 108, 108, 1);
  margin-bottom: 30px;
  max-width: 856px;
  margin: auto;
}
.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  justify-items: center;
  margin-top: 60px;
}
.feature-card {
  background-color: #e9f5fe;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  max-width: 250px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  position: relative;
}
.icon-container {
  position: relative;
  margin-bottom: 15px;
}
.icon-background {
  width: 70px;
  height: 70px;
  background-color: #d9effc;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, 0);
}
.icon-container img {
  width: 30px;
  height: 40px;
  position: relative;
  z-index: 1;
  top: 20px;
}
.feature-heading {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}
.feature-description {
  font-size: 14px;
  color: rgba(108, 108, 108, 1);
}
.underline {

  width: 40px;
  height: 4px;
  background-color: #007bff;
  margin: 15px auto 0;
  border-radius: 2px;
  position: absolute;
  bottom: 25px;
  left: 100px;
}
</style>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Choose us for our unparalleled commitment to quality, innovative filtration solutions, and exceptional customer service."
    }
  ],
  "blocks": [
    {
      "type": "feature_card",
      "name": "Feature Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Unmatched Quality"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Our products are crafted with the highest quality materials and rigorous quality control processes, ensuring superior performance and durability."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
